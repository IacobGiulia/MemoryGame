<Window x:Class="Tema2___MemoryGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2___MemoryGame"
        mc:Ignorable="d"
        Title="GameWindow" Height="1014" Width="696">
    <Grid Margin="0,0,10,68">
        <!-- Adăugăm un ItemsControl pentru a itera prin carduri -->
        <ItemsControl ItemsSource="{Binding Cards}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image HorizontalAlignment="Left" Height="150" Width="138"
                           VerticalAlignment="Top" Margin="{Binding Margin}" 
                           Source="{Binding ImagePath}">
                        <!-- Evenimentul de click pe card -->
                        <Image.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.CardClickCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
                        </Image.InputBindings>
                    </Image>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Text pentru a arăta timpul rămas -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="20" Text="{Binding TimerText}" />

        <!-- Buton pentru a începe un joc nou -->
        <Button Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="150" Height="50" Command="{Binding NewGameCommand}" />
    </Grid>
</Window>
