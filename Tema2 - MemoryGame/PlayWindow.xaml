<Window x:Class="Tema2___MemoryGame.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2___MemoryGame"
        mc:Ignorable="d"
        Title="PlayWindow" Height="199" Width="411">
    <Grid Margin="0,0,0,67">
        <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <MenuItem Header="File">
                <MenuItem Header="Category"/>
                <MenuItem Header="New Game" Click="NewGameOption_Click" />
                <MenuItem Header="Open Game" Command="{Binding SaveGameCommand}" />
                <MenuItem Header="Save Game"/>
                <MenuItem Header="Statistics" Click="StatisticsOption_Click"/>
                <MenuItem Header="Exit" Click="ExitOption_Click" />
                
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Standard (4x4)"  Click="NewGameOption_Click"/>
                <MenuItem Header="Custom"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="AboutOption_Click" />
            </MenuItem>
        </Menu>

    </Grid>
</Window>
