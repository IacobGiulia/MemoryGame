<Window x:Class="Tema2___MemoryGame.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2___MemoryGame"
        mc:Ignorable="d"
        Title="NewUserWindow" Height="472" Width="446">
    <Grid Margin="0,0,0,-6">
        <TextBlock HorizontalAlignment="Left" Margin="42,45,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" Height="23" Width="80" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Margin="127,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontSize="14" Text="{Binding Username}"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,125,0,0" TextWrapping="Wrap" Text="Profile Image:" VerticalAlignment="Top" FontSize="14" Height="22" Width="98"/>
        <Image HorizontalAlignment="Center" Height="118" Margin="0,101,0,0" VerticalAlignment="Top" Width="114" Source="{Binding ImagePath}"/>
        <Button Content="Choose Image" HorizontalAlignment="Left" Margin="42,251,0,0" VerticalAlignment="Top" FontSize="14" Height="32" Width="98" Command="{Binding ChooseImageCommand}"/>
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,381,0,0" VerticalAlignment="Top" Width="82" FontSize="14" Height="31" Command="{Binding SaveUserCommand}"/>
    </Grid>
</Window>
